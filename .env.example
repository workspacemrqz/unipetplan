# Environment Configuration for UNIPET PLAN
# Copy this file to .env and fill in your actual values

# Node Environment (development/production)
NODE_ENV=production

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Database Configuration
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://user:password@localhost:5432/unipet_db

# Session Configuration
# Generate a strong random string for session encryption
SESSION_SECRET=your-super-secret-session-key-here

# Admin Configuration
# Initial admin password (optional, for first setup)
ADMIN_INITIAL_PASSWORD=admin123
# Legacy admin password field (optional)
SENHA=admin123

# Supabase Configuration (for file storage)
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Payment Gateway Configuration (Cielo)
# Get these from your Cielo merchant account
CIELO_MERCHANT_ID=your-cielo-merchant-id
CIELO_MERCHANT_KEY=your-cielo-merchant-key
CIELO_ENVIRONMENT=production

# Email Configuration
# For sending notification emails
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_FROM=noreply@unipetplan.com

# Frontend Build Configuration
# API target for Vite proxy during build
VITE_API_TARGET=http://localhost:3000

# Optional: Analytics and Monitoring
# NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
# SENTRY_DSN=your-sentry-dsn

# Optional: CDN Configuration
# CDN_URL=https://cdn.your-domain.com

# Optional: Redis Configuration (for caching)
# REDIS_URL=redis://localhost:6379

# Application URLs
# Used for absolute links in emails, webhooks, etc.
APP_URL=https://your-domain.com
API_URL=https://your-domain.com/api

# Security Configuration
# For CSRF protection
CSRF_SECRET=your-csrf-secret-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# Cron Job Configuration
ENABLE_CRON_JOBS=true
RENEWAL_CHECK_CRON=0 2 * * *  # Daily at 2 AM

# Logging Configuration
LOG_LEVEL=info  # debug, info, warn, error
LOG_FORMAT=json  # json or text

# Development/Testing
# Set to true to enable development features
DEV_MODE=false
TEST_MODE=false

# Webhook URLs (for payment notifications, etc.)
WEBHOOK_URL=https://your-domain.com/api/webhooks
WEBHOOK_SECRET=your-webhook-secret

# Deployment Specific (Easypanel/Heroku)
# These are usually set automatically by the platform
# DYNO=web.1
# HEROKU_APP_ID=
# HEROKU_APP_NAME=
# HEROKU_RELEASE_VERSION=